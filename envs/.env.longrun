# =============================================================================
# Long Training Configuration (Train/Valid Curve Analysis)
# =============================================================================
# Use this configuration for full training with validation curve monitoring.
# This helps identify overfitting and find optimal stopping point.
# =============================================================================

# -----------------------------------------------------------------------------
# Experiment Settings
# -----------------------------------------------------------------------------
EXPERIMENT_NAME=longrun_experiment
OUTPUT_DIR=./outputs/longrun

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_CHECKPOINT_PATH=./checkpoints/pi05_base_paligemma.npz
MODEL_TOKENIZER_PATH=./assets/paligemma_tokenizer.model
MODEL_KAGGLE_HANDLE=google/paligemma/jax/paligemma-3b-pt-224

# Model architecture
MODEL_LLM_VARIANT=gemma_2b
MODEL_VOCAB_SIZE=257152
MODEL_IMG_SIZE=224
MODEL_IMG_VARIANT=So400m/14
MODEL_IMG_POOL_TYPE=none
MODEL_IMG_SCAN=true
MODEL_IMG_DTYPE_MM=float16

# -----------------------------------------------------------------------------
# Training Configuration
# -----------------------------------------------------------------------------
TRAINABLE_PARAMS=attention_only

# Standard hyperparameters for full training
LEARNING_RATE=0.03
BATCH_SIZE=8
NUM_EPOCHS=10
WARMUP_PERCENT=0.10
LR_SCHEDULE=cosine
MAX_GRAD_NORM=1.0
SEED=42

# -----------------------------------------------------------------------------
# Data Configuration (Full dataset)
# -----------------------------------------------------------------------------
DATA_BASE_DIR=/home/suchae/pi_workspace/XVR
DATA_TRAIN_FILE=train.jsonl
DATA_VALID_FILE=valid.jsonl
DATA_EVAL_FILE=xvr_eval.jsonl
DATA_IMAGE_DIR=images

# No sample limits - use full dataset
MAX_TRAIN_SAMPLES=
MAX_EVAL_SAMPLES=

MAX_SEQ_LENGTH=256
SHUFFLE_BUFFER_SIZE=1000
NUM_PARALLEL_CALLS=8

PROMPT_PREFIX=answer en

# -----------------------------------------------------------------------------
# Logging (Balanced for curve tracking)
# -----------------------------------------------------------------------------
LOG_EVERY=10
EVAL_EVERY=100
CHECKPOINT_EVERY=500
MAX_CHECKPOINTS_TO_KEEP=5

# Enable W&B for experiment tracking
USE_WANDB=true
WANDB_PROJECT=paligemma-xvr
WANDB_ENTITY=

# -----------------------------------------------------------------------------
# Evaluation
# -----------------------------------------------------------------------------
EVAL_NUM_EXAMPLES=100
EVAL_BATCH_SIZE=4
EVAL_SAMPLER=greedy
EVAL_NUM_BEAMS=4

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
XLA_MEM_FRACTION=0.9
SHARDING_STRATEGY=fsdp
TF_ALLOW_GROWTH=true

BIG_VISION_PATH=/home/suchae/pi_workspace/big_vision
