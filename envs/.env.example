# =============================================================================
# PaliGemma Training Configuration
# =============================================================================
# Copy this file to .env and modify as needed for your experiment.
# All paths can be absolute or relative to the project root.
# =============================================================================

# -----------------------------------------------------------------------------
# Experiment Settings
# -----------------------------------------------------------------------------
EXPERIMENT_NAME=default
OUTPUT_DIR=./outputs

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_CHECKPOINT_PATH=./checkpoints/pi05_base_paligemma.npz
MODEL_TOKENIZER_PATH=./assets/paligemma_tokenizer.model
MODEL_KAGGLE_HANDLE=google/paligemma/jax/paligemma-3b-pt-224

# Model architecture
MODEL_LLM_VARIANT=gemma_2b
MODEL_VOCAB_SIZE=257152
MODEL_IMG_SIZE=224
MODEL_IMG_VARIANT=So400m/14
MODEL_IMG_POOL_TYPE=none
MODEL_IMG_SCAN=true
MODEL_IMG_DTYPE_MM=float16

# -----------------------------------------------------------------------------
# Training Configuration
# -----------------------------------------------------------------------------
# Which parameters to train: attention_only, full_llm, full_model
TRAINABLE_PARAMS=attention_only

# Hyperparameters
LEARNING_RATE=0.03
BATCH_SIZE=8
NUM_EPOCHS=10
WARMUP_PERCENT=0.10
LR_SCHEDULE=cosine
MAX_GRAD_NORM=1.0
SEED=42

# -----------------------------------------------------------------------------
# Data Configuration
# -----------------------------------------------------------------------------
# Set this to your XVR dataset location
DATA_BASE_DIR=/workspace/paligemma_jax_training/../XVR
DATA_TRAIN_FILE=train.jsonl
DATA_VALID_FILE=valid.jsonl
DATA_EVAL_FILE=xvr_eval.jsonl
DATA_IMAGE_DIR=images

# Sequence settings
MAX_SEQ_LENGTH=512
SHUFFLE_BUFFER_SIZE=1000

# Task prompt
PROMPT_PREFIX=answer en

# -----------------------------------------------------------------------------
# Logging and Checkpointing
# -----------------------------------------------------------------------------
LOG_EVERY=10
EVAL_EVERY=100
CHECKPOINT_EVERY=500
MAX_CHECKPOINTS_TO_KEEP=3

# Weights & Biases (optional)
USE_WANDB=false
WANDB_PROJECT=paligemma-xvr
WANDB_ENTITY=

# -----------------------------------------------------------------------------
# Evaluation Configuration
# -----------------------------------------------------------------------------
EVAL_NUM_EXAMPLES=
EVAL_BATCH_SIZE=4
EVAL_SAMPLER=greedy

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
XLA_MEM_FRACTION=0.9
TF_ALLOW_GROWTH=true

# Big Vision path (cloned by setup.sh)
BIG_VISION_PATH=/workspace/paligemma_jax_training/../big_vision
